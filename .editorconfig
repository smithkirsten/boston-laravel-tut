root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.html]
quote_type = double

[*.{yml,yaml,json,js,css,svg,scss}]
indent_size = 2
quote_type = single

[docker-compose.yml]
indent_size = 4
